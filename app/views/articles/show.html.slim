.containner
  .row
    .col-md-2
    .col-md-8
      - unless notice.nil?
        p
          .alert.alert-success#notice
            = notice

      dl.dl-horizontal
        dt
          = Article.human_attribute_name('article.title')
        dd
          = @article.title
        dt
          = Article.human_attribute_name('article.category')
        dd
          = @article.category.name unless @article.category.nil?
        dt
          = Article.human_attribute_name('article.author')
        dd
          = @article.author
        dt 
          = Article.human_attribute_name('article.source')
        dd
          = @article.source
        dt
          = Article.human_attribute_name('article.summary')
        dd 
          = @article.summary
        dt
          = Article.human_attribute_name('article.image')
        dd
          = raw "<img src='http://#{@article.image.attachment_url}!image1' />" unless @article.image.nil?
        dt
          = Article.human_attribute_name('article_body.body')
        dd
          = @article.body.html_safe
          
    .col-md-2
